<div class="container" style="margin: 20px auto">
    <div class="row">
        <div class="col-8 offset-2">
            <h4>Agregar una nueva novedad</h4>
            <form action="/admin/novedades/agregar" method="post">

                <div class="form-group mb-3">
                    <input type="text" class="form-control" placeholder="Titulo" name="titulo">
                </div>
                <div class="form-group mb-3">
                    <textarea class="form-control" aria-label="With textarea" placeholder="Mensaje"
                        name="mensaje"></textarea>
                </div>
                <button type="submit" class="btn btn-primary fs-5 me-3">Guardar</button>
                <a href="/admin/novedades" class="btn btn-secondary fs-5">
                    Volver <i class="fas fa-reply"></i></a>
            </form>
            {{#if error}}
            <h5>{{message}}</h5>
            {{/if}}
        </div>
    </div>
</div>