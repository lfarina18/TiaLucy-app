<div class="container" style="margin: 50px auto">
    <div class="row">
        <div class="col-8 offset-2">
            <h3>Modificar imagen</h3>
            <form action="/admin/imagenes/modificarImagen" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <p>
                        <label>Imagen: <input type="file" name="imagen" id="imagen" /></label>
                    </p>

                    <input type="hidden" value="{{imagen.id}}" name="id_original">
                    <input type="hidden" value="{{imagen.img_id}}" name="img_original">

                </div>
                <button type="submit" class="btn btn-primary fs-5 me-3">Modificar</button>
                <a href="/admin/imagenes" class="btn btn-secondary fs-5">
                    Volver <i class="fas fa-reply"></i></a>
            </form>
            {{#if error}}
            <svg xmlns="http://www.w3.org/2000/svg" style="display: none;">
                <symbol id="exclamation-triangle-fill" fill="currentColor" viewBox="0 0 16 16">
                    <path
                        d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z" />
                </symbol>
            </svg>
            <div class="alert alert-danger d-flex align-items-center mt-3" role="alert">
                <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Danger:">
                    <use xlink:href="#exclamation-triangle-fill" />
                </svg>
                <h4 class="fs-4 ms-3">{{message}}</h4>
            </div>
            {{/if}}
        </div>
    </div>
</div>